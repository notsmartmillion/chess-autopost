# ======================================
# Chess Autopost - Environment Template
# Copy this file to .env and fill values
# ======================================

# -----------------------------
# Database
# -----------------------------
DB_URL=postgresql+psycopg2://user:password@localhost:5432/chessbot

# -----------------------------
# Engine (Stockfish)
# -----------------------------
# Windows example:
# STOCKFISH_PATH=C:\Program Files\Stockfish\stockfish.exe
# Linux/macOS example:
# STOCKFISH_PATH=/usr/local/bin/stockfish
STOCKFISH_PATH=/usr/local/bin/stockfish
ENGINE_THREADS=4
ENGINE_HASH_MB=1024
ENGINE_DEPTH=20
ENGINE_MULTIPV=4

# Analysis / Rendering helpers
ALT_PREVIEW_PLIES=2
MAX_SCENE_DURATION_MS=1600

# -----------------------------
# Caching
# -----------------------------
CACHE_DIR=./cache
ENABLE_DISK_CACHE=true

# -----------------------------
# ElevenLabs (Voice)
# -----------------------------
ELEVENLABS_API_KEY=
VOICE_ID=

# -----------------------------
# YouTube API (Uploader)
# -----------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# -----------------------------
# Optional Services
# -----------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SLACK_WEBHOOK_URL=

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=INFO

# -----------------------------
# Paths
# -----------------------------
OUTPUT_DIR=./outputs
AUDIO_DIR=./outputs/audio
